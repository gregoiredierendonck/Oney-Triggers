{% assign maxwidth = '720px' %}
{% assign black = '#202020' %}
{% assign grey = '#ECECEC' %}
{% assign white = '#ffffff' %}
{% assign primarycolor = '#455A64' %}
{% assign secondarycolor = '#455A64' %}

<style>

	* {
		box-sizing: border-box;
	}
	.logo {
		width: 100%;
		height: auto;
		display: inline-block;
		text-align: center;
		margin-bottom: 20px;
	}
	.logo img {
		width: 80px;
		max-width: 100%;
		margin: 60px auto 0;
	}
	body, a {
		font-family: helvetica, arial, serif;
		font-size: 16px;
		font-weight: normal;
		line-height: 24px;
		color: {{ black }};
	}
	#wrapper {
		width: 100%;
		text-align: center;
	}
	.content {
		width: 100%;
	}
	.contener {
		max-width: {{ maxwidth }};
		margin: 0 auto;
		padding: 10px 30px;
	}
	h1 {
		font-family: 'Lato', georgia, serif;
		display: inline-block;
		margin: 0 0 30px;
		width: 80%;
		text-align: center;
		color: {{ black }};
		font-weight: normal;
	}
	h2 {
		font-family: 'Roboto Slab', helvetica, arial, serif;
		color: {{ black }};
		font-size: 22px;
		font-weight: 400;
		text-align: left;
		margin: 20px 0;
	}
	ul {
		width: 100%;
		display: inline-block;
		text-align: left;
		list-style: none;
		padding: 0;
		margin: 0;
	}
	li {
		width: 100%;
		margin-top: -1px;
		float: left;
		display: inline-block;
	}
	a {
		display: inline-block;
		width: 100%;
		height: auto;
		color: {{ primarycolor }};
		border: 1px solid lightgrey;
		text-decoration: none;
		background-color: {{ white }};
		padding: 10px 55px 10px 25px;
		outline: none;
		position: relative;
	}
	a.false {
		color: #D3D3D3;
		cursor: default;
	}
	a small {
    color: #e3188b;
    height: 100%;
    width: 50px;
    display: inline-block;
    position: absolute;
    right: 0;
    top: 0;
    text-align: center;
    padding-top: 11px;
    text-transform: uppercase;
    background-color: rgba(0, 0, 0, 0.05);
    font-size: 12px;
  }
	footer {
		width: 100%;
		display: inline-block;
		margin: 40px 0;
	}
	footer a {
		color: {{ secondarycolor }};
		border-color: {{ secondarycolor }};
	}
	.backtolist {
		margin: 40px auto;
		box-sizing: border-box;
		width: 100%;
    max-width: 720px;
    padding: 10px 30px;
	}
	.backtolist a {
		width: 100%;
		color: #e3188b;
		border: 1px solid #e3188b;
		text-align: left;
	}
</style>
